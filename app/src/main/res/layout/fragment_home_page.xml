<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageFragment">

    <include
        android:id="@+id/include"
        layout="@layout/custom_action_bar"/>

    <TextView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include"
        android:text="HOME"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20dp"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/bio_stuff"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_below="@id/home"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/profile_transparent" />

        <TextView
            android:id="@+id/bio_stuff_title"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="BIO"
            android:textSize="20dp" />
<RelativeLayout
    android:id="@+id/text_box_frame"
    android:layout_width="220dp"
    android:layout_height="100dp"
    android:layout_below="@id/bio_stuff_title"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="35dp"
    android:background="@drawable/box_bg">

    <TextView
        android:id="@+id/bio_description"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/quicksand_regular"
        android:scrollbars="vertical"
        android:text="Temp Bio Description..."
        android:textSize="15dp"
        android:layout_centerInParent="true"/>
    </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio_stuff"
        android:text="WHERE EVERYONE IS HEARD"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:id="@+id/navigation_buttons"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@id/slogan"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nav_translation"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/quicksand_regular"
            android:text="START TRANSLATION"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nav_saved_phrases"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_translation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/quicksand_regular"
            android:text="SAVED PHRASES"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nav_join"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_saved_phrases"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/quicksand_regular"
            android:text="JOIN"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nav_host"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_join"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/quicksand_regular"
            android:text="HOST"
            android:textColor="@color/white"
            android:textSize="20dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/help_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigation_buttons"
        android:text="Need Help?"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="EXIT"
        android:fontFamily="@font/quicksand_regular"
        android:textSize="20dp"/>

</RelativeLayout>
</ScrollView>